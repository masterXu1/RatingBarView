<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认"/>

    <com.qiangxi.RatingBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义一(改变总数和选中数)"
        />

    <com.qiangxi.RatingBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:clickable="true"
        app:selectedCount="4"
        app:totalCount="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义二(改变选中和未选中图片)"
        />

    <com.qiangxi.RatingBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:clickable="true"
        app:normalDrawable="@drawable/icon_normal"
        app:selectedCount="4"
        app:selectedDrawable="@drawable/icon_selected"
        app:totalCount="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义三(改变子view大小)"
        />

    <com.qiangxi.RatingBarView
        android:id="@+id/ratingBarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:childDimension="20dp"
        app:clickable="true"
        app:normalDrawable="@drawable/icon_normal"
        app:selectedCount="4"
        app:selectedDrawable="@drawable/icon_selected"
        app:totalCount="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义四(改变图片padding和子view之间的margin)"
        />

    <com.qiangxi.RatingBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:childMargin="10dp"
        app:childPadding="2dp"
        app:clickable="true"
        app:normalDrawable="@drawable/icon_normal"
        app:selectedCount="4"
        app:selectedDrawable="@drawable/icon_selected"
        app:totalCount="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义五(改变RatingBarView方向)"
        />

    <com.qiangxi.RatingBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:clickable="true"
        app:selectedCount="4"
        app:totalCount="7"/>
</LinearLayout>
